<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Properties>

		<Property name="log-path">E:/geoTrends/logs</Property>

	</Properties>

	<Appenders>

		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<RollingFile name="file-log" fileName="${log-path}/geo-trends.log"
			filePattern="${log-path}/geo-trends-%d{yyyy-MM-dd}.log">
			<PatternLayout>
				<pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
				</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
		</RollingFile>

	</Appenders>

	<Loggers>

		<Logger name="aks.geo.trends.srv" level="trace" additivity="false">
			<Appender-ref ref="file-log" level="trace" />
		</Logger>

		<Root level="trace" additivity="false">
			<AppenderRef ref="Console" />
		</Root>

	</Loggers>

</Configuration>